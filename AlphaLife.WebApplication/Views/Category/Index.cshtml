@model IEnumerable<Category>

@{
    ViewData["Title"] = "list Of Category";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=> model.Image)</th>
                    <th>@Html.DisplayNameFor(model=> model.NameAR)</th>
                    <th>@Html.DisplayNameFor(model=> model.NameEN)</th>
                    <th>@Html.DisplayNameFor(model=> model.Description)</th>
                        <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@category.Image" alt="@category.NameEN : @category.NameAR" style="max-width:150px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(actorModel => category.NameEN)</td>
                        <td class="align-middle">@Html.DisplayFor(actorModel => category.NameAR)</td>
                        <td class="align-middle">@Html.DisplayFor(actorModel => category.Description)</td>
                                <td class="align-middle">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" style="color:white;"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem","Category")
